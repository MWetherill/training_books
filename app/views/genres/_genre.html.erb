<tr id="<%= dom_id genre %>">
  <td><%= link_to genre.name, genre %></td>
  <td><%= genre.books.count %></td>
  <td>
    <div class="d-flex flex-row justify-content-end align-items-center gap-1">
      <%= link_to edit_genre_path(genre), class: "btn btn-primary" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= button_to genre, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>