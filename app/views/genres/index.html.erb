<h1 class="mb-4">Genres</h1>
<%= link_to "Add a genre", new_genre_path, class: "btn btn-primary" %>
<hr>
<% if @genres.present? %>
  <table class="table table-striped text-start">
    <thead>
      <th scope="col">Name</th>
      <th scope="col">No. of books</th>
      <th scope="col"></th>
    </thead>
    <tbody>
      <%= render @genres %>
    </tbody>
  </table>
  <div class="d-flex justify-content-end">
    <%== @pagy.series_nav(:bootstrap) %>
  </div>
<% end %>