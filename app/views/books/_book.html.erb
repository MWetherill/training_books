<tr id="<%= dom_id book %>">
  <td><%= link_to book.title, book %></td>
  <td><%= book.short_description %></td>
  <td><%= book.genres.map{|bg| link_to bg.name, bg}.join(', ').html_safe %></td>
  <td><%= link_to name(book.user), book.user %></td>
  <td>
    <div class="d-flex flex-row justify-content-end align-items-center gap-1">
      <%= link_to edit_book_path(book), class: "btn btn-primary" do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
      <%= button_to book, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </td>
</tr>