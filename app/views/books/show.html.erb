<h6 class="fw-lighter">BOOK</h6>
<h2><%= @book.title %></h2>
<p class="mb-2">
  <% @book.genres.each do |bg| %>
    <%= link_to bg.name, bg %><span class="book__book_genre--seperator me-1">,</span>
  <% end %>
</p>
<p class="mb-4"><%= @book.short_description %></p>
<p class="fst-italic mb-4"><small>Owned by <%= link_to @book.user.full_name, @book.user %></small></p>
<div class="d-flex flex-row justify-content-start align-items-center gap-1">
  <%= link_to 'Back to books', books_path, class: "btn btn-primary" %>
  <%= link_to edit_book_path(@book), class: "btn btn-primary" do %>
    <i class="fa-solid fa-pen-to-square"></i>
  <% end %>
  <%= link_to rails_blob_path(@book.body, disposition: "attachment", only_path: true), class: "btn btn-primary" do %>
    <i class="fa-solid fa-download"></i>
  <% end %>
  <%= button_to @book, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
</div>
<hr>
<div class="w-100 p-0 m-0">
  <%= image_tag(@book.cover, class: "w-auto") %>
</div>
<hr>
<h3>History</h3>
<table class="table table-striped text-start">
  <thead>
    <th scope="col">Activity</th>
    <th scope="col">Timestamp</th>
  </thead>
  <tbody>
    <%= render_activities(@activities, {layout: :activity}) %>
  </tbody>
</table>
